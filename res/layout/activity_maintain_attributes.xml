<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MaintainAttributes" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtMaintainAttributeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/activity_attribute_label" />

        <Spinner
            android:id="@+id/lstMaintainAttributeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtMaintainAttributeID"
            android:layout_toRightOf="@+id/txtMaintainAttributeID" />

        <TextView
            android:id="@+id/txtMaintainAttributeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtMaintainAttributeID"
            android:layout_below="@+id/lstMaintainAttributeID"
            android:text="@string/activity_attribute_type_label" />

        <Spinner
            android:id="@+id/listMaintainAttributeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lstMaintainAttributeID"
            android:layout_alignTop="@+id/txtMaintainAttributeType" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnMaintainAttributeSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_button_label" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_button_label" />

</LinearLayout>