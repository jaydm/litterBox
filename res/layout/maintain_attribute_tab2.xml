<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/maAttributeDesc2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ma_attribute_id_label" />

    <TextView
        android:id="@+id/maAttributeDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/maAttributeDesc2Label"
        android:text="TextView" />

    <TextView
        android:id="@+id/maAddValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/maAttributeDesc2Label"
        android:layout_below="@+id/maAttributeDesc2Label"
        android:text="@string/ma_attribute_value_label" />

    <EditText
        android:id="@+id/maAttributeAddValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/maAttributeDesc2"
        android:layout_alignTop="@+id/maAddValueLabel"
        android:ems="10" />

    <Button
        android:id="@+id/maAddValueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/maAttributeAddValue"
        android:text="@string/ma_button_add_label" />

    <ListView
        android:id="@+id/maValuesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/maAddValueButton"
        android:layout_marginTop="25dp" >
    </ListView>

</RelativeLayout>
